<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="290dp" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivCWM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cwm_ico"
                android:contentDescription="@string/empty" />

            <Button
                android:id="@+id/bCWM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Go"
                android:tag="cwm"
                android:text="@string/sFlashCWM" />

            <ImageView
                android:id="@+id/ivTWRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/twrp_ico"
                android:contentDescription="@string/empty" />

            <Button
                android:id="@+id/bTWRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Go"
                android:tag="twrp"
                android:text="@string/sFlashTWRP" />

            <Button
                android:id="@+id/bFlashOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bFlashOther"
                android:text="@string/flash_other" />

            <Button
                android:id="@+id/bBackup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bBackup"
                android:text="@string/sBackup" />

            <Button
                android:id="@+id/bRestore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bRestore"
                android:text="@string/sRestore" />

            <Button
                android:id="@+id/bCleareCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bCleareCache"
                android:text="@string/sCleareCache" />

            <Button
                android:id="@+id/bRebooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bRebooter"
                android:text="@string/sRebooter" />
        </LinearLayout>
    </ScrollView>

    <CheckBox
        android:id="@+id/cbUseBinary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="false"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:visibility="visible" />

</LinearLayout>