<resources>
    <style name="spinnerStyleView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="nowCardLight" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>
    <style name="nowCardDark" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="MyLightDarkBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="button_style">@style/nowCardLight</item>
    </style>

    <style name="MyLight" parent="Theme.AppCompat.Light">
        <item name="button_style">@style/nowCardLight</item>
    </style>

    <style name="MyDark" parent="Theme.AppCompat">
        <item name="button_style">@style/nowCardDark</item>
    </style>
</resources>